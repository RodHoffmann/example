<p style="color: green"><%= notice %></p>
<% if @article.photos.attached? %>
  <%= cl_image_tag @article.photos[0].key, crop: :fill, width: 400, height: 300 %>

  <%= render @article %>
  <div>
    <div class="card-category"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photos[1].key, height: 300, crop: :fill %>')"
  >
    Cool article
  </div>
  </div>
  </div>
<% end %>


<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", root_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
